<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.user.OtpVerifyFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/skyblue"
        >

        <TextView
            android:id="@+id/verify_otp_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify OTP"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3"
            />
        <TextView
            android:id="@+id/enter_otp_txt"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:text="Enter OTP sent to"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintTop_toBottomOf="@id/verify_otp_txt"
            android:gravity="center"/>
        <TextView
            android:id="@+id/number_txt"
            android:layout_width="120dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toEndOf="@id/enter_otp_txt"
            app:layout_constraintTop_toBottomOf="@id/verify_otp_txt"
            android:layout_marginTop="14dp"
            android:text="+919910748495"
            />
        <EditText
            android:id="@+id/edit_otp_txt"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:hint="Enter OTP"
            app:layout_constraintTop_toBottomOf="@id/verify_otp_txt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <Button
            android:id="@+id/btn_otp"
            android:layout_width="220dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_otp_txt"
            android:layout_marginTop="10dp"
            android:text="Verify OTP"
            android:backgroundTint="@color/blue"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/bar_otpVerify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>